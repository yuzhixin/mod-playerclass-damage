[worldserver]

########################################
# ModPlayerClassDamage
########################################

#
#    ModPlayerClassDamage.Enable
#        描述: 允许角色伤害/治疗效果调整模块.
#        默认:         0 - 禁用
#                     1 - 允许
#
ModPlayerClassDamage.Enable = 1

#
#    ModPlayerClassDamage.DebugInfo
#        描述: 开启调试模式,可以看到技能伤害变化提示.
#        默认:         0 - 禁用
#                     1 - 允许
#
ModPlayerClassDamage.DebugInfo = 0

#
#	指导建议,如果不想调整某职业伤害调整,可以把允许调整设置为0。 
#	而不是设置2个都为1,这样可以有效降低服务器负载。
#

#
#    ModPlayerClassDamage.Warior
#        描述: 允许调整战士1伤害
#        默认:         0 - 禁用
#                     1 - 允许
#    ModPlayerClassDamage.WariorRate
#        描述: 允许调整战士1伤害倍率,不能为0和上面允许开关配套使用
#        默认:         1.0 
#
ModPlayerClassDamage.Warior = 0
ModPlayerClassDamage.WariorRate = 1.0

#
#    ModPlayerClassDamage.Paladin

#        描述: 允许调整骑士2伤害
#        默认:         0 - 禁用
#                     1 - 允许
#    ModPlayerClassDamage.PaladinRate
#        描述: 允许调整骑士2伤害倍率,不能为0和上面允许开关配套使用
#        默认:         1.0 
#
